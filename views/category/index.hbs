<center><h2>Categories Management</h2></center>
<a class="btn btn-primary mb-3" href="/category/add">Add new category</a>
<table class="list">
    <tr>
        <th>Category Name</th>
        <th>Descriptions</th>
        <th>Options</th>
    </tr>
    {{#each categoryList }}
        <tr>
            <td>{{ categoryName }}</td>
            <td>{{ description }}</td>
            <td>
                <a class="btn btn-success" href="/category/edit/{{ _id }}">Edit</a><br>
                <a class="btn btn-danger" href="/category/delete/{{ _id }}"
                onclick="return confirm('Do you want to delete this class ?');">
                Delete</a>
            </td>
        </tr>
    {{/each}}
</table>

