<center><h2>Supplier Management</h2></center>
<a class="btn btn-primary mb-3" href="/supplier/add">Add new supplier</a>
<table class="list">
    <tr>
        <th>Supplier Name</th>
        <th>Contact Number</th>
        <th>Email</th>
        <th>Address</th>
        <th>Description </th>
        <th>Options</th>
    </tr>
        {{#each supplierList }}
        <tr>
            <td>{{ supplierName }}</td>
            <td>{{ phone }}</td>
            <td>{{ email }}</td>
            <td>{{ address }}</td>
            <td>{{ description }}</td>
            <td>
                <a class="btn btn-success" href="/supplier/edit/{{ _id }}">Edit</a>
                <br>
                <a class="btn btn-danger" href="/supplier/delete/{{ _id }}"
                onclick="return confirm('Do you want to delete this supplier ?');">
                Delete</a>
            </td>
        </tr>
        {{/each}}
</table>